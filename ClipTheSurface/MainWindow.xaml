        <Button x:Name="ctrlToogle" Content="Ctrl" HorizontalAlignment="Right" Margin="0,0,0,80.143" VerticalAlignment="Bottom" Width="132" Height="66" FontSize="22" Click="ctrlToogle_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="altToogle" Content="Alt" HorizontalAlignment="Right" Margin="0,0,0,0.143" VerticalAlignment="Bottom" Width="132" Height="66" FontSize="22" Click="altToogle_Click" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
