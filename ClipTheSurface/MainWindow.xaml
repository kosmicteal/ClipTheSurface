            <Button x:Name="shiftToogle" Content="" HorizontalAlignment="Right" Margin="0,0,0,160.143" VerticalAlignment="Bottom" Width="132" Height="66" FontFamily="Segoe MDL2 Assets" FontSize="30" Click="shiftToogle_Click" StylusEnter="hideApp_StylusEnter" StylusLeave="hideApp_StylusLeave"/>
