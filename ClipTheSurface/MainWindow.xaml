            <Button x:Name="rightPrecision" Content="" HorizontalAlignment="Right" Margin="0,70,0,0" VerticalAlignment="Top" Width="63" Height="66" FontFamily="Segoe MDL2 Assets" FontSize="22" Click="rightPrecision_Click" StylusEnter="hideApp_StylusEnter" StylusLeave="hideApp_StylusLeave"/>
            <Button x:Name="downPrecision" Content="" HorizontalAlignment="Right" Margin="0,140,35,0" VerticalAlignment="Top" Width="63" Height="66" FontFamily="Segoe MDL2 Assets" FontSize="22" Click="downPrecision_Click" StylusEnter="hideApp_StylusEnter" StylusLeave="hideApp_StylusLeave"/>

