            <Button x:Name="altToogle" Content="Alt" HorizontalAlignment="Right" Margin="0,0,0,0.143" VerticalAlignment="Bottom" Width="132" Height="66" FontSize="22" Click="altToogle_Click" StylusEnter="hideApp_StylusEnter" StylusLeave="hideApp_StylusLeave"/>

        </Grid>
        
        <Label x:Name="ffmWatchLabel" Content="" HorizontalAlignment="Right" Margin="0,0,-6,88" VerticalAlignment="Center" Foreground="White" Height="28" Width="63" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" FontFamily="Segoe UI Semibold" FontSize="14" Visibility="Hidden"/>
